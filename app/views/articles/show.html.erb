
	<h1 class="text-center mt-4"><%= @article.title%></h1>
	<div class="row justify-content-center">
		<div class="col-lg-10">
			<div class="card mt-2" style="height: 350px">
				<div class="card-header fst-italic">
					Featured
				</div>
				<div class="card-body">
					<p class="card-text"><%= simple_format(@article.description) %></p>
					
					
				
				</div>
				<div class="card-footer text-body-secondary">
					<div class="row">
						<div class="col-5">
						<small>Added by: <%= @article.user.username if @article.user%></small>:
						<small><%= time_ago_in_words(@article.created_at)%> ago</small>
						</div>
						<div class="col-7 text-end">
						<%= link_to 'Edit', edit_article_path(@article), class:"btn btn-outline-warning btn-sm" %>
						<%= link_to 'Delete', article_path(@article), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class:"btn btn-outline-danger btn-sm" %>
						</div>
					</div>	
				</div>
			</div>
		</div>		
	

</div>

