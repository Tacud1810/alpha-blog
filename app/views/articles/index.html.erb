<h1>Articles</h1>

<h3><%= link_to 'New article', new_article_path %></h3>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Description</th>
			<th colspan="3">Actions</th>
		</tr>
	</thead>


<tbody>
	<% @articles.each do |article|%>
		<tr>
			<td><%= link_to article.title, article_path(article) %></td>
			<td><%= article.description %></td>
			<td width=50px ><%= link_to 'Show', article_path(article) %></td>
			<td width=50px><%= link_to 'Update', edit_article_path(article) %></td>
			<td width=50px><%= link_to 'Delete', article_path(article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this article?' } %></td>
			
			
		</tr>
	<% end %>
</tbody>
</table>
