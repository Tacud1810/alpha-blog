
<h1 class="text-center mt-4">Articles</h1>
	<div class="row clearfix ">
	<% @articles.each do |article|%>
	
		<div class="col-lg-3">
			<div class="card mt-2" style="height: 350px">
				<h5 class="card-title" style="text-indent: 10px"><%= link_to truncate(article.title, length: 15), article_path(article), class:"text-success"%></h5>
				<div class="card-header fst-italic">
					Featured
				</div>
				<div class="card-body">
					<p class="card-text"><%= truncate(article.description, length: 100) %></p>
					
					
				
				</div>
				<div class="card-footer text-body-secondary">
					<div class="row">
						<div class="col-5">
						<small><%= article.created_at.strftime("%Y-%m-%d")%></small>
						</div>
						<div class="col-7">
						<%= link_to 'Edit', edit_article_path(article), class:"btn btn-outline-warning btn-sm" %>
						<%= link_to 'Delete', article_path(article), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class:"btn btn-outline-danger btn-sm" %>
						</div>
					</div>	
				</div>
			</div>
		</div>		
	
	<% end %>
</div>

